# wm independent hotkeys
#

# terminal emulator
ctrl + alt + t
	kitty

# program launcher
alt + @space
	rofi -show drun

# make sxhkd reload its configuration files:
mod4 + Escape
	pkill -USR1 -x sxhkd

# File manager
mod4 + e
	nautilus --new-window ~

#
# bspwm hotkeys
#

# restart bspwm
mod4 + alt + r
	bspc wm -r

# close node
ctrl + alt + q
	bspc node -c

# Toogle node fullscreen
mod4 + w
	bspc node -t {fullscreen, tiled}

# Toggle floating
mod4 + d
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi

#
# focus/swap
#

# focus the last node/desktop
mod4 + Tab
	bspc desktop -f next.local

mod4 + shift + Tab
       bspc desktop -f prev.local

# Send current node to the given desktop
mod4 + {1-9,0}
        bspc node --to-desktop '^{1-9,10}'

# move or select node in direction
mod4 + {_,shift + }{Left,Down,Up,Right}
	bspc node --{focus,swap} {west,south,north,east}

#
# preselect
#

# preselect the direction
mod4 + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
mod4 + ctrl + {1-9}
	bspc node -o 0.{1-9}

#
# move/resize
#

# Expand/contract a window by moving one of its side outward/inward
ctrl + alt + {Left,Down,Up,Right}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# Swap window
#mod4 + {Left,Down,Up,Right}
#	bspc node --swap {west,south,north,east}

# Other
Print
  flameshot gui

mod4 + alt + l
  betterlockscreen -l dimblur

# Screen brightness

XF86MonBrightness{Down,Up}
	brightnessctl s 10%{-,+}

# Audio

XF86Audio{Lower,Raise}Volume
	pactl set-sink-volume $(pactl info | grep "Default Sink:" | cut -d':' -f2) {-,+}5%

XF86AudioMute
	pactl set-sink-mute $(pactl info | grep "Default Sink:" | cut -d':' -f2) toggle

XF86AudioMicMute
	pactl set-source-mute 1 toggle

XF86WLAN
	wifi toggle
